<%- include('partials/header', { title: title }) %>
<div class="main-content-area" style="display: flex; flex-direction: column; justify-content: center; align-items: center; min-height: 80vh; text-align: center; padding: 20px;">
    <i class="fas fa-tools fa-5x" style="color: #e74c3c; margin-bottom: 20px;"></i>
    <h1 style="font-size: 3em; color: var(--dark-blue-text);">500 - Ada Masalah Teknis</h1>
    <p style="font-size: 1.2em; color: #555; margin-bottom: 30px;">Maaf, terjadi kesalahan pada server kami. Tim teknis sedang menanganinya.</p>
    <a href="/" class="btn-primary" style="padding: 12px 25px; border-radius: 25px; text-decoration: none; font-weight: 500; background-color: var(--primary-color); color: white;">
        <i class="fas fa-home"></i> Coba Kembali ke Beranda
    </a>
    <% if (NODE_ENV !== 'production' && typeof error !== 'undefined' && error) { %>
        <pre style="margin-top: 20px; background: #f0f0f0; padding: 15px; border-radius: 5px; text-align: left; max-width: 80%; overflow-x: auto;"><%= error.stack %></pre>
    <% } %>
</div>
<%- include('partials/footer') %>
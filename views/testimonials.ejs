<%- include('partials/header', { title: title }) %>

<div class="main-content-area">
    <section id="testimonials-page" class="content-section" style="padding-top: 80px;">
        <h2 class="section-title" data-aos="fade-up">Apa Kata Mereka?</h2>
        <p class="section-subtitle" data-aos="fade-up" data-aos-delay="100">Simak testimoni dari klien-klien yang telah mempercayakan project website mereka kepada WANZOFC-TECH.</p>
       
        <% if (testimonials.length > 0) { %>
        <div class="testimonials-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 30px; margin-top: 40px;">
            <% testimonials.forEach(testimonial => { %>
            <div class="testimonial-card" data-aos="fade-up" data-aos-delay="<%= tÃ©moignageIndex * 100 + 200 %>" style="background-color: var(--bg-white); border-radius: 12px; padding: 25px; box-shadow: var(--card-shadow); display: flex; flex-direction: column; align-items: center; text-align: center;">
                <% if (testimonial.imagePath) { %>
                    <img src="<%= BASE_URL + testimonial.imagePath %>" alt="Testimoni <%= testimonial.name %>" style="width: 100px; height: 100px; border-radius: 50%; object-fit: cover; margin-bottom: 15px; border: 3px solid var(--primary-color);">
                <% } else { %>
                    <div style="width: 100px; height: 100px; border-radius: 50%; background-color: var(--primary-color); color: white; display: flex; align-items: center; justify-content: center; font-size: 2.5em; margin-bottom: 15px;">
                        <%= testimonial.name.charAt(0).toUpperCase() %>
                    </div>
                <% } %>
                <h3 style="font-size: 1.3em; color: var(--dark-blue-text); margin-bottom: 8px;"><%= testimonial.name %></h3>
                <% if (testimonial.rating) { %>
                    <div class="star-rating" style="margin-bottom: 10px; color: #f39c12;">
                        <% for(let i = 0; i < 5; i++) { %>
                            <% if (i < testimonial.rating) { %>
                                <i class="fas fa-star"></i>
                            <% } else { %>
                                <i class="far fa-star"></i>
                            <% } %>
                        <% } %>
                    </div>
                <% } %>
                <p style="font-style: italic; color: #555; font-size: 0.95em;">"<%= testimonial.quote %>"</p>
            </div>
            <% }); %>
        </div>
        <% } else { %>
        <p style="text-align: center; font-size: 1.1em; margin-top: 30px;">Belum ada testimoni yang ditampilkan saat ini. Cek kembali nanti!</p>
        <% } %>
    </section>
</div>

<%- include('partials/footer') %>